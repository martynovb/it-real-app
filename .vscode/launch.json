    "version": "0.2.0",
    "configurations": [
        {
            "name": "development",
            "request": "launch",
            "type": "dart",
            "program": "lib/targets/development/main.dart",
            "args": [
                "--dart-define-from-file",
                ".env/local.env",
                "--web-port",
                "8080",
            ]
        },
        {
            "name": "development_web_mobile",
            "type": "dart",
            "request": "launch",
            "program": "lib/targets/development/main.dart",
            "args": [
                "-d",
                "web-server",
                "--web-port",
                "8080",
                "--web-hostname",
                "0.0.0.0",
                "--dart-define-from-file",
                ".env/local.env",
            ],
            "toolArgs": [
                "fvm",
                "flutter",
                "run"
            ]
        }
    ]
}